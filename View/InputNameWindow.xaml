<Window x:Class="Ynost.View.InputNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод имени" Height="180" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=NameBox}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите ФИО преподавателя (как в таблице):" Margin="0,0,0,10"/>

        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,0,0,15" Padding="5"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Готово" IsDefault="True" Click="Ok_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>