                        <!-- 11. Экспериментальные проекты -->
                        <TextBlock Text="11. Экспериментальная и инновационная деятельность" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.ExperimentalProjects}" SelectedItem="{Binding SelectedTeacher.SelectedExperimentalProject, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
