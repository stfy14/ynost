                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Title}" Width="Auto" MinWidth="250" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddPublicationCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeletePublicationCommand}" MinWidth="30" Margin="5,0,0,0"/>
