                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование проекта" Binding="{Binding Name}" Width="Auto" MinWidth="300" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddExperimentalProjectCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteExperimentalProjectCommand}" MinWidth="30" Margin="5,0,0,0"/>
