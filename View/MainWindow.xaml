                        <!-- 12. Наставничество -->
                        <TextBlock Text="12. Наставническая деятельность" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.Mentorships}" SelectedItem="{Binding SelectedTeacher.SelectedMentorship, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО стажера" Binding="{Binding Trainee}" Width="Auto" MinWidth="200" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
