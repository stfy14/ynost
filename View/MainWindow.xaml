                        <TextBlock Text="14. Участие в профессиональных конкурсах" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.ProfessionalCompetitions}" SelectedItem="{Binding SelectedTeacher.SelectedProfessionalCompetition, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование конкурса" Binding="{Binding Name}" Width="Auto" MinWidth="250" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Достижение" Binding="{Binding Achievement}" Width="Auto" MinWidth="120"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding EventDate}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
