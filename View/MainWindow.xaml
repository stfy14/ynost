                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteSpeechCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 10. Публикации -->
                        <TextBlock Text="10. Публикации" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.Publications}" SelectedItem="{Binding SelectedTeacher.SelectedPublication, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
