                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- (2) НИЖНЯЯ ПАНЕЛЬ СТАТУСА И СОХРАНЕНИЯ -->
        <Border Grid.Row="2" Background="#EEE" Padding="6" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Статус соединения -->
                <TextBlock Grid.Column="0" Text="{Binding ConnectionStatusText}" VerticalAlignment="Center" Margin="5,0" Foreground="Gray"/>

                <!-- Кнопки управления сессией и сохранения -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Обновить БД" Command="{Binding RetryConnectionCommand}" Margin="0,0,10,0" Padding="10,4"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}" BorderBrush="#FF969696"/>

                    <Button Content="{Binding LoginButtonText}" Padding="10,4" Command="{Binding ToggleLoginCommand}" Margin="0,0,15,0" Click="Button_Click_2" BorderBrush="#FF969696"/>

                    <Button Content=" СОХРАНИТЬ " Padding="25,4" Command="{Binding SaveChangesCommand}" FontWeight="Bold" 
                            Background="#DDFFDD" BorderBrush="#99CC99"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>