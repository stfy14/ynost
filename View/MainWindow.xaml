<Window x:Class="Ynost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ynost.Converters" 
        mc:Ignorable="d"
        Title="Ynost Portfolio Manager" Height="850" Width="1400"
        Loaded="MainWindow_Loaded"
        FontSize="14"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="WrappedTextBlockCellStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="EditingTextBoxStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>

        <!-- Стиль для подсветки конфликтов версий (красный фон) -->
        <Style TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConflicting}" Value="True">
                    <Setter Property="Background" Value="#FFB6C1" />
                    <Setter Property="ToolTip" Value="Данные были изменены другим пользователем! Перезагрузите список." />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- ГЛАВНАЯ СЕТКА ОКНА -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- (0) Верхняя панель (Toolbar) -->
            <RowDefinition Height="*"/>
            <!-- (1) Основной контент -->
            <RowDefinition Height="Auto"/>
            <!-- (2) Нижняя панель (Status) -->
        </Grid.RowDefinitions>

        <!-- (0) ВЕРХНЯЯ ПАНЕЛЬ ИНСТРУМЕНТОВ -->
        <Border Grid.Row="0" Background="#E8EDF9" BorderBrush="#B0B0B0" BorderThickness="0,0,0,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Преподаватели" FontWeight="Bold" FontSize="18" Foreground="#333" Margin="0,0,20,0"/>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- 1. НОВАЯ КНОПКА (Красная): Валидация ВСЕХ -->
                    <Button Command="{Binding ValidateAllTeachersCommand}" 
                            Margin="0,0,10,0" Padding="10,5"
                            Background="#FFEBEE" BorderBrush="#EF5350">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡ Заполнить с Sheets (ВСЕХ)" FontWeight="SemiBold" Foreground="#C62828"/>
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip Content="Скачать Google Sheet и заполнить пропуски для ВСЕХ преподавателей в списке."/>
                        </Button.ToolTip>
                    </Button>

                    <!-- 2. СТАРАЯ КНОПКА (Желтая): Валидация ТЕКУЩЕГО -->
                    <Button Command="{Binding ValidateAndFillDataCommand}" 
                            Margin="0,0,10,0" Padding="10,5"
                            Background="#FFF8E1" BorderBrush="#FFD54F">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📥 Заполнить с Sheets" FontWeight="SemiBold" Foreground="#333"/>
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip Content="Заполнить пропуски только для ВЫБРАННОГО преподавателя."/>
                        </Button.ToolTip>
                    </Button>

                    <Button Command="{Binding ImportFromExcelCommand}" 
                    Margin="0,0,15,0" Padding="10,5" 
                    Background="White" BorderBrush="#FF969696">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📥 Импорт Excel" FontWeight="SemiBold"/>
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip Content="Импортировать данные из файла .xlsm в таблицу"/>
                        </Button.ToolTip>
                    </Button>

                    <!-- Кнопка ЭКСПОРТА -->
                    <Button Command="{Binding ExportToExcelCommand}" Padding="15,5" Background="White" BorderBrush="#FF969696">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊 Экспорт в Excel" FontWeight="SemiBold"/>
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip Content="Экспортировать данные из таблицы в .xlsm"/>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- (1) ОСНОВНОЙ КОНТЕНТ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ КОЛОНКА: СПИСОК -->
            <Grid Grid.Column="0" Background="#F3F6FF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Поиск -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопка "Учителя" (старая навигация) -->
                    <RowDefinition Height="*"/>
                    <!-- Список -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопки списка -->
                </Grid.RowDefinitions>

                <!-- Поиск -->
                <StackPanel Grid.Row="0" Margin="8">
                    <TextBlock Text="Поиск по ФИО:" Foreground="Black" Margin="0,0,0,4"/>
                    <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged" Padding="4"/>
                </StackPanel>

                <!-- Кнопка навигации (если нужна) -->
                <Grid Grid.Row="1" Margin="8,0,8,8">
                    <Button Content="Учителя" Click="OnTeachersButton_Click" Padding="5" BorderBrush="#FF969696"/>
                </Grid>

                <!-- DataGrid Списка -->
                <DataGrid x:Name="TeachersGrid" Grid.Row="2" 
                          ItemsSource="{Binding Teachers}" 
                          SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" Margin="8,0"
                          SelectionChanged="DataGrid_SelectionChanged"
                          PreparingCellForEdit="DataGrid_PreparingCellForEdit" 
                          CellEditEnding="DataGrid_CellEditEnding"
                          BorderThickness="1" BorderBrush="#DDD">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО преподавателя" Binding="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Width="*" 
                                            ElementStyle="{StaticResource WrappedTextBlockCellStyle}" 
                                            EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Кнопки управления списком -->
                <Grid Grid.Row="3" Margin="8,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Добавить" Command="{Binding AddStaffCommand}" Margin="0,0,5,0" Padding="0,6" BorderBrush="#FF969696"/>
                    <Button Grid.Column="1" Content="Удалить" Command="{Binding DeleteStaffCommand}" Margin="5,0,0,0" Padding="0,6" BorderBrush="#FF969696"/>
                </Grid>
            </Grid>

            <!-- СПЛИТТЕР -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#CCC" ResizeBehavior="PreviousAndNext"/>

            <!-- ПРАВАЯ КОЛОНКА: ДЕТАЛИ -->
            <Grid Grid.Column="2">
                <!-- Индикаторы загрузки -->
                <TextBlock Text="{Binding StatusText}" FontSize="20" FontWeight="SemiBold" Foreground="#555"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoadingOrSaving, Converter={StaticResource BoolToVisConverter}}"/>

                <TextBlock Text="Выберите преподавателя или войдите в систему" FontSize="18" Foreground="#999"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding ShowLoginPrompt, Converter={StaticResource BoolToVisConverter}}"/>

                <!-- Основной скролл с данными -->
                <ScrollViewer x:Name="DetailsScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding ShowDataContent, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel Margin="15" IsEnabled="{Binding CanEditData}">

                        <!-- 1. Итоговые результаты успеваемости -->
                        <TextBlock Text="1. Итоговые результаты успеваемости (аттестат)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.AcademicResults}" SelectedItem="{Binding SelectedTeacher.SelectedAcademicResult, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"
                                  PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Учебный год" Binding="{Binding AcademicPeriod}" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="Auto" MinWidth="180" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл 1 сем." Binding="{Binding AvgSem1}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл 2 сем." Binding="{Binding AvgSem2}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Динамика сем." Binding="{Binding DynamicsSem}" IsReadOnly="True" Width="Auto" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}"/>

                                <DataGridTextColumn Header="Успеваемость 1 сем." Binding="{Binding AvgSuccessRate}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Успеваемость 2 сем." Binding="{Binding AvgSuccessRateSem2}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Динамика успев." Binding="{Binding DynamicsAvgSuccessRate}" IsReadOnly="True" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}"/>

                                <DataGridTextColumn Header="Качество 1 сем." Binding="{Binding AvgQualityRate}" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Качество 2 сем." Binding="{Binding AvgQualityRateSem2}" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Динамика кач." Binding="{Binding DynamicsAvgQualityRate}" IsReadOnly="True" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}"/>

                                <!-- НОВАЯ КОЛОНКА: ПРОМЕЖУТОЧНЫЙ -->
                                <DataGridTextColumn Header="Промежуточный" Binding="{Binding Intermediate}" Width="Auto" MinWidth="110" FontWeight="Bold" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>

                                <DataGridTextColumn Header="СОУ Входной" Binding="{Binding EntrySouRate}" Width="Auto" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="СОУ Итоговый" Binding="{Binding ExitSouRate}" Width="Auto" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Динамика СОУ" Binding="{Binding DynamicsSouRate}" IsReadOnly="True" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddAcademicResultCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteAcademicResultCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 1А. Результаты промежуточной аттестации -->
                        <TextBlock Text="1А. Результаты промежуточной аттестации" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.IntermediateAssessments}" SelectedItem="{Binding SelectedTeacher.SelectedIntermediateAssessment, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Учебный год" Binding="{Binding AcademicYear}" Width="Auto" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="Auto" MinWidth="180" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="СР БАЛ" Binding="{Binding AvgScore}" Width="Auto" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="КАЧЕСТВО" Binding="{Binding Quality}" Width="Auto" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="СОУ" Binding="{Binding Sou}" Width="Auto" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddIntermediateAssessmentCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteIntermediateAssessmentCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 2. ГИА -->
                        <TextBlock Text="2. Результаты государственной итоговой аттестации (ГИА)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.GiaResults}" SelectedItem="{Binding SelectedTeacher.SelectedGiaResult, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="Auto" MinWidth="160" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="Auto" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Участников" Binding="{Binding TotalParticipants}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во «5»" Binding="{Binding Count5}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Кол-во «4»" Binding="{Binding Count4}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Кол-во «3»" Binding="{Binding Count3}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Кол-во «2»" Binding="{Binding Count2}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Средний балл" Binding="{Binding AvgScore}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddGiaResultCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteGiaResultCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 3. Демоэкзамен -->
                        <TextBlock Text="3. Результаты государственной аттестации (ДЭ)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.DemoExamResults}" SelectedItem="{Binding SelectedTeacher.SelectedDemoExamResult, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Компетенция" Binding="{Binding Subject}" Width="Auto" MinWidth="200" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Участников" Binding="{Binding TotalParticipants}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Кол-во «5»" Binding="{Binding Count5}" Width="Auto" MinWidth="70"/>
                                <DataGridTextColumn Header="Кол-во «4»" Binding="{Binding Count4}" Width="Auto" MinWidth="70"/>
                                <DataGridTextColumn Header="Кол-во «3»" Binding="{Binding Count3}" Width="Auto" MinWidth="70"/>
                                <DataGridTextColumn Header="Кол-во «2»" Binding="{Binding Count2}" Width="Auto" MinWidth="70"/>
                                <DataGridTextColumn Header="Ср. балл" Binding="{Binding AvgScore}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddDemoExamResultCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteDemoExamResultCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 4. НОКО -->
                        <TextBlock Text="4. Результаты независимой оценки качества (НОКО/ВПР)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.IndependentAssessments}" SelectedItem="{Binding SelectedTeacher.SelectedIndependentAssessment, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Вид НОКО" Binding="{Binding AssessmentName}" Width="Auto" MinWidth="180" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding AssessmentDate}" Width="Auto" MinWidth="100"/>
                                <DataGridTextColumn Header="Класс/Предмет" Binding="{Binding ClassSubject}" Width="Auto" MinWidth="140"/>
                                <DataGridTextColumn Header="Всего" Binding="{Binding StudentsTotal}" Width="Auto" MinWidth="60"/>
                                <DataGridTextColumn Header="Участв." Binding="{Binding StudentsParticipated}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Справились" Binding="{Binding StudentsPassed}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="«5»" Binding="{Binding Count5}" Width="Auto" MinWidth="60"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddIndependentAssessmentCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteIndependentAssessmentCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 5. Самоопределение -->
                        <TextBlock Text="5. Раннее самоопределение и профориентация" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.SelfDeterminations}" SelectedItem="{Binding SelectedTeacher.SelectedSelfDetermination, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Мероприятие" Binding="{Binding Name}" Width="Auto" MinWidth="250" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="Auto" MinWidth="120"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddSelfDeterminationCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteSelfDeterminationCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 6. Олимпиады -->
                        <TextBlock Text="6. Олимпиады, конкурсы, соревнования" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.StudentOlympiads}" SelectedItem="{Binding SelectedTeacher.SelectedStudentOlympiad, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Событие" Binding="{Binding Name}" Width="Auto" MinWidth="220" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Участник" Binding="{Binding Cadet}" Width="Auto" MinWidth="180"/>
                                <DataGridTextColumn Header="Результат" Binding="{Binding Result}" Width="Auto" MinWidth="120"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="Auto" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                            <Button Content=" + " Command="{Binding SelectedTeacher.AddStudentOlympiadCommand}" MinWidth="30"/>
                            <Button Content=" - " Command="{Binding SelectedTeacher.DeleteStudentOlympiadCommand}" MinWidth="30" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- 7. Жюри -->
                        <TextBlock Text="7. Деятельность в качестве члена жюри" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.JuryActivities}" SelectedItem="{Binding SelectedTeacher.SelectedJuryActivity, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" MinRowHeight="25" HorizontalAlignment="Left"
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="Auto" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Мероприятие" Binding="{Binding Name}" Width="Auto" MinWidth="250" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
