<Window x:Class="Ynost.View.TeacherSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите преподавателя" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Найдено несколько совпадений. Выберите нужного:" 
                   FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox x:Name="TeachersList" Grid.Row="1" Margin="0,0,0,10" 
                 MouseDoubleClick="TeachersList_MouseDoubleClick"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Выбрать" IsDefault="True" Click="Select_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>